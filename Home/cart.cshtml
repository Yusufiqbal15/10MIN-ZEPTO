
@{
    ViewBag.Title = "cart";
    Layout = "~/Views/Shared/generallayout.cshtml";
}



<style>
    .c {
        font-family: Cooper;
    }

    .x1 {
        color: #311B92;
    }

    .a2 {
        min-height: 500px;
    }

    .b {
        background: lightgrey;
    }
</style>
<h1 class="c text-center x1">CART</h1>
<div class="row p-4 a2 ">
    <div class="col-sm-8 text-start m-1 b">
        <!--column 1 start-->
        @{
            int total = 0;
            if (ViewBag.cart!= null)
            {
                if (ViewBag.cart.Rows.Count > 0)
                {

                    foreach (var c in ViewBag.cart.Rows)
                    {
                        <div class="row mt-3 me-5">
                            <div class="col-sm-2 mx-1 ">
                                <img src="~/Content/productpic/@c[9]" style="height:70px; width:70px" />
                            </div>
                            <div class="col-sm-5">
                                <b class="c">@c[3]</b><br />
                                <small>Pack/size:@c[8]</small><br />
                                <small> Model:  @c[5]</small>
                            </div>

                            <div class="col-sm-2 ">
                                <b class="c">Quantity:@c[14]</b><br />
                                <div class="input-group ">
                                    <b class="input-group-text"><i class="fa-solid fa-minus"></i></b>
                                    <input type="text" class="form-control text-center fs-4 " value="0" />
                                    <b class="input-group-text"><i class="fa-solid fa-plus"></i></b>
                                </div>
                            </div>


                            <div class="col-sm-1 c text-center ">
                                <b>Total</b><br />
                                <b>@c[15]</b>
                                @{ 
                                    total = total + Convert.ToInt32(c[15]);
                                }
                            </div>


                            <div class="col-sm-1 text-danger mt-3  me-5">
                                <a href="/home/deleteitem?cid=@c[11]"> 
                                <i class="fa-solid fa-trash"></i></a>
                            </div>

                        </div>
                    }
            }
            }

        }

        <!--column 1 end-->



       
        <!--column 2 end-->
    </div>

    <div class="col-sm-3 ms-5" style="background: lightgrey;">
        <h5 class="text-center">Daily details</h5>
        <div class="row">
            <div class="col-sm-6">
                <br />
                <p class="text-start ps-2">Sub total : :</p>
                <p class="text-start ps-2">Delivery charge:</p>
                <p class="text-start ps-2">Discount :</p>
                <br />
                <br />
                <b class="text-start ps-2">Total(INR) :</b>
            </div>
            <div class="col-sm-6">
                <br />
                <b class="text-end pe-2"><i class="fa-sharp fa-solid fa-indian-rupee-sign"></i> @total </b>
                <br />
                <br />
                <b class="text-end pe-2"><i class="fa-sharp fa-solid fa-indian-rupee-sign"></i>30.00</b>
                <br />
                <br />
                </b><br /><br /><br />
                <b class="text-end pe-2"><i class="fa-sharp fa-solid fa-indian-rupee-sign"></i> @(total+30) -/Only</b>
            </div>

            <center><input type="Submit" value="Proceed to Checkout" class="btn btn-danger w-75 mt-3" /></center>
        </div>

    </div>
</div>


