
@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/generallayout.cshtml";
    <style>
        .b{

        }
        .b:hover{
            background:green;
            color:white;
        }
    </style>

}




<div class="text-center"><h2>Sign<b class="text-warning">In</b></h2></div>
<div class="container  ">
    <div class="row p-3 " style="min-height:500px;">
        <div class="col-sm-7  bg-light  border border-light border-2 mx-auto p-3" style="min-height: 350px;box-shadow:2px 2px 10px 5px white ;border-radius: 10px 10px 10px 10px">

            

                <div class="col-sm-10 p-3">

                    <form method="post" action="/home/signup">
                        NAME: <input type="text" placeholder="NAME..." style="width:90%" name="name" required class="form-control m-3" />

                        EMAIL: <input type="email" placeholder="EMAIL..." style="width:90%" name="email" required class="form-control m-3" />

                        MOBILE NO :<input type="number" placeholder="MOBILE NO..." style="width:90%" name="mobno" required class="form-control m-3" />

                        PASSWORD: <input type="password" name="password" style="width:90%" class="form-control m-3" />


                        ADDRESS <textarea type="message" class="p-1 m-3 form-control" style="width:90%" required name="address"></textarea>


                        STATE: <select name="state" style="width:90%" class="form-control m-3">
                            <option>UTTER PRADESH</option>
                            <option>BIHAR</option>
                            <option>JAMMU KASHMIR</option>
                            <option>UTTRAKHAND</option>
                            <option>RAJISTHAN</option>
                        </select>

                        CITY:    <select name="city" style="width:90%" class="form-control">
                            <option>jaluan</option>
                            <option>ballia</option>
                            <option>lucknow</option>
                            <option>kanpur</option>
                            <option>mahoba</option>
                        </select>
                        <br />

                        <br /> LANDMARK:<input type="text" style="width:90%" name="landmark" class="form-control" />

                        PINCODE:  <input type="number" style="width:90%" name="pincode" class="form-control" /><br/>
                        <input type="submit" style="width:90%" class="p-3 b form-control" value="Register now" />

                    </form>

                </div>

            </div>

        </div>
    </div>

