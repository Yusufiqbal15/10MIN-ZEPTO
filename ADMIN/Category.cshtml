
@{
    ViewBag.Title = "Category";
    Layout = "~/Views/Shared/ADMIN_LayoutPage1.cshtml";
}

<h2>Category</h2>




<div class="row p-5">
    <div class="col-sm-5 card">
        <div class="card-body b">
            <h4 class="card-title text-center">ADD CATEGORY</h4>

            <form method="post" enctype="multipart/form-data">
                <div class="form-group mt-3  b">
                    <label for="exampleInputtext4" class="form-label">Category Name</label>
                    <input type="text" name="catname" class="form-control " placeholder="Enter Category">
                </div>
                <div class="form-group mt-3 b">
                    <label for="exampleInput" class="form-label">Category Icon</label>
                    <input type="file" name="caticon" class="form-control">
                </div>
                <input type="submit" class="btn btn-outline-success  mt-3 b" value="ADD NOW " />
            </form>
        </div>


    </div>
    <div class="col-sm-6 ms-5 card text-center">
        <div class="card-body">
            <!--Start table-->
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th> S.No</th>
                        <th> Category Name</th>
                        <th>Category Icon</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>

                    @{
                        foreach (var row in ViewBag.category.Rows)
                        {
                            <tr>
                                <td>@row[0]</td>
                                <td>@row[1]</td>
                                <td><img src="~/Content/caticon/@row[2]"  style="height:70px; width:70px" /></td>
                                <td>
                                    <i class="fa fa-trash text-danger">
                                    </i>
                                </td>

                            </tr>
                        }
                    }

                </tbody>
               
            </table>
            <!--End table-->
        </div>
    </div>
</div>
